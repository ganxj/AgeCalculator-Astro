      "YYYY-MM-DD"
    );
    const nextBirthday = endNextMoment.diff(startNextMoment, "days");

    document.getElementById("suiContent").textContent =
      "You were " +
      yearsDiff +
      " years, " +
      yearMonthsDiff +
      " months, and " +
      daysDiff +
      " days old";
    document.getElementById("endDayFull").textContent =
      endDayVal + " " + getMonthStr(endMonthVal) + " " + endYearVal;
    document.getElementById("startDayFull").textContent =
      startDayVal + " " + getMonthStr(startMonthVal) + " " + startYearVal;
    document.getElementById("monthDayStr").textContent =
      monthsDiff + " months and " + monthRemainingDays + " days";
    document.getElementById("weekDayStr").textContent =
      weeks + " week and " + weekRemainingDays + " days";
    document.getElementById("daysStr").textContent = daysDifference;
    document.getElementById("daysToBirthday").textContent = nextBirthday;

    document.getElementById("yourAge").classList.remove("hidden");
  });

  function getMonthStr(month) {
    switch (month) {
      case "01":
        return "January";
      case "02":
        return "February";
      case "03":
        return "March";
      case "04":
        return "April";
      case "05":
